# DayTrader Environment Configuration
# Copy this file to .env and configure your settings
# NEVER commit .env with real values - only .env.example should be in version control

# =============================================================================
# Application Settings
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=development

# Frontend application port (maps to host port in Docker)
APP_PORT=3000

# Backend API port (maps to host port in Docker)
BACKEND_PORT=3001

# CORS origin for backend (use specific origin in production)
# CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# Market Data API Keys
# =============================================================================
# Get free API keys from the following services to enable real-time data:

# Finnhub - Real-time stock quotes, candles, and news
# Get your free API key at: https://finnhub.io/register
# VITE_FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage - Free stock data API
# Get your free API key at: https://www.alphavantage.co/support/#api-key
# VITE_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Twelve Data - Financial data platform
# Get your free API key at: https://twelvedata.com/register
# VITE_TWELVE_DATA_API_KEY=your_twelve_data_api_key_here

# NewsAPI - Financial news
# Get your free API key at: https://newsapi.org/register
# VITE_NEWS_API_KEY=your_newsapi_key_here

# Preferred data source (finnhub, alphaVantage, twelveData, yahoo)
# Default: yahoo (requires no API key, provides real market data)
VITE_PREFERRED_DATA_SOURCE=yahoo

# =============================================================================
# Database Settings
# =============================================================================

# PostgreSQL Database Configuration
# The database is required for user authentication and settings persistence
POSTGRES_DB=daytrader
POSTGRES_USER=daytrader
POSTGRES_PASSWORD=your_secure_password_here

# PostgreSQL port (for development access)
POSTGRES_PORT=5432

# Database connection string (auto-generated from above in docker-compose)
# For external database, set this directly:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# =============================================================================
# Security Settings
# =============================================================================

# Secret key for session/token signing (generate a strong random value)
# SECRET_KEY=

# =============================================================================
# Build Information (auto-populated during build)
# =============================================================================

# These are typically set during CI/CD build process
# BUILD_VERSION=
# BUILD_COMMIT=
# BUILD_TIME=

# =============================================================================
# ML Service Settings
# =============================================================================

# ML Service port
ML_SERVICE_PORT=8000

# Enable CUDA/GPU acceleration (requires NVIDIA GPU and drivers)
USE_CUDA=true

# Model training parameters
ML_SEQUENCE_LENGTH=60
ML_FORECAST_DAYS=14
ML_EPOCHS=100
ML_LEARNING_RATE=0.001

# FinBERT Sentiment Analysis
# Preload FinBERT model on startup (uses ~500MB memory, faster first request)
# Set to false for lazy loading (model loads on first sentiment request)
PRELOAD_FINBERT=false

# =============================================================================
# RL Trading Service Settings (Deep Reinforcement Learning)
# =============================================================================

# RL Trading Service port
RL_SERVICE_PORT=8001

# Default training timesteps (higher = better training, longer time)
RL_DEFAULT_TIMESTEPS=100000

# RL Learning rate
RL_LEARNING_RATE=0.0003

# Backend URL for RL service to fetch historical data
BACKEND_URL=http://backend:3001

# =============================================================================
# Docker Settings
# =============================================================================

# Docker Compose project name (optional, defaults to directory name)
# COMPOSE_PROJECT_NAME=daytrader

# Enable BuildKit for faster builds (recommended)
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
